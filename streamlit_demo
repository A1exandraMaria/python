import streamlit as st

# Add a title
st.title("My First Streamlit App")

# Display text
st.text("This program displays text and an image.")

# Display an image
st.image("https://upload.wikimedia.org/wikipedia/commons/thumb/a/a8/Tux.png/1200px-Tux.png")

# Add a slider
number = st.slider("Choose a number", 0, 100, 50)

# Display the selected number
st.text(f"You selected the number: {number}")


# Add a button
if st.button("Click me!"):
  st.text("You clicked the button!")

# Closing message
st.text("This was my first Streamlit app!")
